@model OperativaCaja.Models.convenio
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

@{
    ViewBag.Title = "Detalles Convenio";
    Layout = "~/Views/Shared/_Modal.cshtml";
}
<div class="modalheadergeneral" style="margin-top: -6%;"><h4><i class="fas fa-file-alt"></i>&nbsp;&nbsp;Detalles Convenio</h4></div>
<hr />
<h4 class="center">Datos de @Html.DisplayFor(model => model.nombre_convenio)</h4>
<div class="center">
    <div class="dl-horizontal contenido">
        <div class="row">
            <p class="col-md-6"><b>Código:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.codigo)</p>
            <p class="col-md-6"><b>Nombre de Convenio:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.nombre_convenio)</p>
        </div>
        <div class="row">
            <p class="col-md-6"><b>Código Cuenta:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.PlanCuentas.CODIGO)</p>
            <p class="col-md-6"><b>Cuenta:</b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.PlanCuentas.NOMBRE)</p>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a href="~/convenios/Index" class="btn btn-inline btn-small btn-danger">Cerrar</a>
</div>