@model IEnumerable<OperativaCaja.Models.configCajero>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
<link href="~/Content/css/sweetalert.css" rel="stylesheet" />
<script src="~/Content/js/sweetalert.min.js"></script>
@{
	ViewBag.Title = "Lista de Cajeros";
	Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/stylegeneral.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<meta http-equiv="Content-type" content="text/html; charset=utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
<script src="~/Scripts/datatable.js"></script>
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<script src="~/Scripts/1.10_two_button.js"></script>

<script type="text/javascript" class="init">
	$(document).ready(function () {
		$('#example').DataTable({
			"pagingType": 'full_numbers',
			"language": {
				"url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
			}
		});
	});
</script>

<div class="col-md-13" style="background: rgb(248, 248, 248)">
	<div class="form-group">
		<div class="col-md-10"><h3 style="border-bottom: 5px solid #2B7785 !important; width: 123%; color: #2B7785 !important; padding: 9px 20px 15px 0px !important;margin-bottom: 31px !important;">Lista de Cajeros</h3></div>
		<div class="col-md-2" style=" margin-top:35px;">
			<a href="/configCajeroes/Create" class="AddUser btn btn-success btn-small btnnuevo">Nuevo</a>
		</div>
	</div>

	<div class="col-md-12 contenido">
		<div class="form-group">
			<button class="js-refrescar"><i class="fa fa-refresh" aria-hidden="true"></i> Actualizar</button>
		</div>
	</div>

	<div class="modal fade" data-backdrop="static" id="centro" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">

				<div class="modal-body">
				</div>
			</div>
		</div>
	</div>

	<div class="table-responsive col-md-12">
		<div class="col-md-12">
			<table id="example" class="table table-striped table-bordered dataTable no-border" widcellspacing="0">
				<thead>
					<tr>
						<th class="medium columnatablaazul">
							<label>Nit Cajero</label>
						</th>
						<th class="medium columnatablaazul2">
							<label>Cajero</label>
						</th>
						<th class="medium columnatablaazul">
							<label>Nombre de Caja</label>
						</th>	
						<th class="medium columnatablaazul">
							<label>Centro Costo Transacciones</label>
						</th>
						<th class="medium columnatablaazul">
							<label>Centro Costo Cierre</label>
						</th>

						<th class="medium columnatablaazul2">
							<label>Comprobante Ingreso</label>
						</th>
						<th class="medium columnatablaazul">
							<label> Comprobante Egreso</label>
						</th>
						<th class="medium columnatablaazul">
							<label> Comprobante Cierre Caja</label>
						</th>
						<th class="medium columnatablaazul2">
							<label>Contrapartida Banco</label>
						</th>
						<th class="medium columnatablaazul">
							<label>Contrapartida Otros</label>
						</th>
						<th class="medium columnatablaazul2">
							<label>Cuenta Efectivo</label>
						</th>
						<th class="medium columnatablaazul">
							<label>Cuenta Cheque</label>
						</th>
						<th class="medium columnatablaazul2">&nbsp;Opciones&nbsp;</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr class="align-center medium">
							<td>
								@Html.DisplayFor(modelItem => item.Terceros.NIT)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Terceros.NOMBRE1) &nbsp;
								@Html.DisplayFor(modelItem => item.Terceros.APELLIDO1)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Caja.Nombre_caja)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.centrocosto)
								@Html.DisplayFor(modelItem => item.CentrosCostos.Nombre)

							</td>
							<td>
								@Html.DisplayFor(modelItem => item.CentroCostoCaja)
								@Html.DisplayFor(modelItem => item.CentrosCostos1.Nombre)

							</td>

							<td>
								@Html.DisplayFor(modelItem => item.TiposComprobantes.NOMBRE)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TiposComprobantes1.NOMBRE)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.TiposComprobantes2.NOMBRE)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.PlanCuentas.NOMBRE)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.PlanCuentas1.NOMBRE)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.PlanCuentas2.NOMBRE)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.PlanCuentas3.NOMBRE)
							</td>
							<td class="align-center">
								<a id="editar" class="btn btn-inline btn-xs btn-primary" href="/configCajeroes/Edit?id=@item.Nit_cajero" title="Editar">
									<i class="fa fa-pencil" aria-hidden="true"></i>
								</a>
								<a class="btn btn-inline btn-xs btn-success" href="/configCajeroes/Details?id=@item.Nit_cajero" data-toggle="modal" data-target="#centro" title="Detalles">
									<i class="fa fa-eye" aria-hidden="true"></i>
								</a>
								@*<a class="btn btn-inline btn-xs btn-danger" href="/configCajeroes/Delete?id=@item.Nit_cajero" data-toggle="modal" data-target="#centro" title="Eliminar" value="Eliminar">
			<i class="fa fa-trash" aria-hidden="true"></i>
		</a>*@
							</td>
						</tr>
					}
				</tbody>
			</table>
			<br /> <br />
		</div>
	</div>
</div>
@**************************************SECCION DE ALERTAS******************************** *@
			@*--------Alertas de eliminacion------*@

					@if (Convert.ToString(Session["Eliminado"]) == "no")
					{
						<script>
							window.onload = function () {
								swal('Error', 'Cajero ya a realizado una operacion de facturacion No es posible Eliminarlo !!!', 'warning');
							}
						</script>
						Session["Eliminado"] = null;

					}
					else
					{
						if (Convert.ToString(Session["Eliminado"]) == "si")
						{
							<script>
								window.onload = function () {
									swal('Eliminado', 'Cajero Eliminado Exitosamente', 'success');
								}
							</script>
							Session["Eliminado"] = null;
						}
					}

			@*--------Alertas de Editar------*@

					@if (Convert.ToString(Session["editado"]) == "si")
					{
						<script>
							window.onload = function () {
								swal('Modificado', 'Cajero Modificado Exitosamente', 'success');
							}
						</script>
						Session["editado"] = null;
					}


			@*--------Alertas de Create------*@

					@if (Convert.ToString(Session["Creado"]) == "si")
					{
						<script>
							window.onload = function () {
								swal('Guardado', 'Cajero Registrado Exitosamente', 'success');
							}
						</script>
						Session["Creado"] = null;
					}


@*---------------------Fin Alertas ---------------------- *@
<style>
	body {
		background-color: #DDD;
	}
</style>
<script>

	//refrescar un div
	$(".js-refrescar").click(function () {
		$("#mostrar").html("");
		$("#mostrar").load("/configCajeroes/Index");
	});


	//Al Ocultar el modal
	$(document.body).on('hidden.bs.modal', function () {
		$('#centro').removeData('bs.modal');
		$(".js-refrescar").click();
	});
</script>

